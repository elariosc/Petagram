<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/corner_radius_cardview"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/rayo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/imgHuesoBlanco"
                android:layout_width="@dimen/iconos_tama単o"
                android:layout_height="@dimen/iconos_tama単o"
                android:background="@drawable/hueso"
                android:layout_marginLeft="@dimen/Espacio_huesos"
                />

            <TextView
                android:id="@+id/tvNombreCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Nombre"
                android:textSize="@dimen/Texto"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Espacio_huesos"
                />

            <TextView
                android:id="@+id/tvRaitingCV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Raiting"
                android:textSize="@dimen/Texto"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/Espacio_grande"
                />

            <ImageView
                android:id="@+id/imgHuesoAmarillo"
                android:layout_width="@dimen/iconos_tama単o"
                android:layout_height="@dimen/iconos_tama単o"
                android:src="@drawable/huesoamarillo"
                android:layout_marginLeft="@dimen/Espacio_huesos"
                android:layout_marginRight="@dimen/Espacio_huesos"
                />
        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>